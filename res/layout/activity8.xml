<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue2"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Activity8" >

    <TextView
        android:id="@+id/game_thequestionis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:scrollbars="vertical"
        android:textColor="#000000"
        android:textIsSelectable="true"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/game_writeanswer"
        android:layout_width="193dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/game_thequestionis"
        android:layout_alignRight="@+id/game_thequestionis"
        android:layout_below="@+id/game_thequestionis"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="@string/writea_text_hint"
        android:scrollbars="vertical"
        android:textColor="#000000"
        android:textSize="20sp" />

    <Button
        android:id="@+id/game_commit"
        android:layout_width="141dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/game_writeanswer"
        android:layout_alignRight="@+id/game_writeanswer"
        android:layout_below="@+id/game_writeanswer"
        android:text="@string/commit_button" />

</RelativeLayout>